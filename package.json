{
    "name": "bsafe",
    "version": "0.0.5",
    "description": "A signature validation package built based on sway in the fuel network",
    "author": "InfinityBase - Guilherme Roque",
    "license": "Apache-2.0",
    "main": "./dist/index.ts",
    "exports": {
        "types": "./types/index.d.ts",
        "require": "./dist/index.js",
        "default": "./dist/index.mjs"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "yarn build:sway && rm -rf dist/ && prettier --write src/ && yarn tsup && yarn build:version",
        "build:sway": "chmod +x dbuild-sway.sh && ./dbuild-sway.sh",
        "build:version": "chmod +x dupdate-version.sh && ./dupdate-version.sh",
        "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
        "chain:start": "make -C ./src/chain start",
        "chain:stop": "make -C ./src/chain stop",
        "chain:clean": "make -C ./src/chain clean",
        "chain:restart": "make -C ./src/chain restart"
    },
    "devDependencies": {
        "@types/jest": "^27.5.2",
        "@types/node": "^16.18.11",
        "@types/react": "17.0.37",
        "@types/react-dom": "17.0.11",
        "prettier": "3.0.3",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "jest": "^29.6.4",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4"
    },
    "peerDependencies": {
        "react": "17.0.2",
        "react-dom": "17.0.2"
    },
    "dependencies": {
        "fuels": "0.43.1",
        "tsup": "^7.2.0"
    }
}
